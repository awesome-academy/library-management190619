<div class="breadcrumbs-area">
  <div class="container">
    <div class="row">
      <%= search_form_for @q, url: books_path, html: {method: :get}, class: "form-inline" do |f| %>
          <div class="form-group">
            <%= f.label :name, class: "black-label" %>
            <%= f.search_field :name_cont, class: "form-control col-6" %>
          </div>
          <div class="form-group">
            <%= f.label :author_name, class: "black-label" %>
            <%= f.search_field :author_name_cont, class: "form-control col-6" %>
          </div>
          <div class="form-group">
            <%= f.label :publisher_name, class: "black-label" %>
            <%= f.search_field :publisher_name_cont, class: "form-control col-6" %>
          </div>
          <div class="form-group">
            <%= f.hidden_field :category_id_eq, value: params[:category_id], class: "form-control col-6" %>
          </div>
          <div class="form-group">
            <%= f.submit t("submit"), name: nil, class: "btn btn-info", id: "search-books-btn" %>
          </div>
      <% end %>
    </div>
  </div>
</div>
<div class="shopping-area section-padding">
  <div class="container">
    <div class="row">
      <div class="col-md-3 col-sm-3 col-xs-12">
        <div class="shop-widget">
          <div class="shop-widget-top">
            <aside class="widget widget-categories">
              <h2 class="sidebar-title text-center"><%= t ".category"%></h2>
              <ul class="sidebar-menu">
                <%= render @categories %>
              </ul>
            </aside>
          </div>
        </div>
      </div>
      <div class="col-md-9 col-sm-9 col-xs-12">
        <div class="shop-tab-area">
          <div class="tab-content">
            <div class="row tab-pane fade in active" id="home">
              <div class="shop-single-product-area">
                <%= render @books %>
                <%= paginate @books, theme: "twitter-bootstrap-3" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
