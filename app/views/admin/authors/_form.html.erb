<%= form_for [:admin, @author] do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :gender %>
    <%= f.select :gender, @genders, {}, class: "custom-select col-12 form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :date_of_birth %>
    <%= f.date_field :date_of_birth, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :picture %>
    <%= f.file_field :picture, accept: "image/jpeg,image/gif,image/png", class: "form-control" %>
  </div>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
