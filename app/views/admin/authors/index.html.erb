<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <%= link_to t(".create"), new_admin_author_path, class: "btn btn-success create-publisher-btn" %>
        <%= search_form_for @q, url: admin_authors_path, html: {method: :get}, class: "form-inline" do |f| %>
          <div class="form-group">
            <%= f.search_field :name_cont, class: "form-control col-6" %>
          </div>
          <div class="form-group">
            <%= f.submit t("submit"),name: nil, class: "btn btn-info" %>
          </div>
        <% end %>
        <h4 class="card-title"><%= t ".list_author" %></h4>
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th scope="col"><%= t ".name" %></th>
                <th scope="col"><%= t ".gender" %></th>
                <th scope="col"><%= t ".date_of_birth" %></th>
                <th scope="col"><%= t ".action" %></th>
              </tr>
            </thead>
            <tbody>
              <%= render @authors %>
              <%= paginate @authors, theme: "twitter-bootstrap-3" %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
