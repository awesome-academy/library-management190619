<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <%= search_form_for @q, url: admin_users_path,html: {method: :get}, class: "form-inline" do |f| %>
          <div class="form-group">
            <%= f.search_field :email_cont, class: "form-control col-6" %>
          </div>
          <div class="form-group">
            <%= f.submit t("submit"),name: nil, class: "btn btn-info" %>
          </div>
        <% end %>
        <h4 class="card-title"><%= t ".list_user" %></h4>
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th scope="col"><%= t ".email" %></th>
                <th scope="col"><%= t ".name" %></th>
                <th scope="col"><%= t ".is_admin" %></th>
                <th scope="col"><%= t ".action" %></th>
              </tr>
            </thead>
            <tbody>
              <%= render @users %>
              <%= paginate @users, theme: "twitter-bootstrap-3" %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
