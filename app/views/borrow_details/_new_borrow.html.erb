<%= form_for @borrow_detail do |f| %>
  <div class="form-group">
    <%= f.label :request_date_from %>
    <%= f.date_field :request_date_from, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :request_date_to %>
    <%= f.date_field :request_date_to, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.hidden_field :book_id, value: book_id %>
  </div>
  <%= f.submit t(".borrow_book"), class: "btn btn-primary" %>
<% end %>
