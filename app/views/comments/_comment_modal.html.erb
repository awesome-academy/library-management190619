<div class="modal fade" id="comment-modal" role="dialog">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-1"></div>
          <div class="col-md-11">
            <%= form_for(object) do |f| %>
              <%= f.text_area(:content, id: "edit_comment_area", cols: 70, rows: 5, placeholder: t(".write_something")) %>
              <%= f.hidden_field :book_id, value: @book.id %>
              <%= f.submit t("submit"), class: "btn btn-primary", data: { disable_with: false }, id: "submit_comment" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
